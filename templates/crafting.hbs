<form id="craftingMenu" class="crafer-crafting-menu">

  
  
  
  <div class="crafter-crafting-item-name">
    {{currentItemRaw}}
    

    
  </div>
  <div class="crafter-item-list-frame">
    <table>
      <thead></thead>
      <tbody>
        <tr>
        
        
          <td>
            <select class="crafter-item-list" id="selectedItem" name="selectedItem" size="10" multiple="">
             {{! <option class="crafter-select-option-selected" value="" selected="selected" index={{recipeIndex}}>
               {{! ---{{item.name}---</option> --}}
              {{#each recipies}}

              {{#if (eq @index ../recipeIndex)}}
              <option class="crafter-select-option-selected" value="{{this}}" selected="selected" index={{@index}} name="{{this}}"> {{this}}</option>
              {{else}}
              <option class="crafter-select-option" value="{{this}}" index={{@index}} name="{{this}}"> {{this}}</option>
              {{/if}}

              {{/each}}
        
            </select>
          </td>
        
        </tr>
    
      </tbody>
    </table>
    </div>
    <div class="crafter-item-description-frame" style="border-color: {{#color currentItemRaw}}{{/color}}">
    <table>
      <tr>
        <td class="crafter-item-image-frame">
              
            <img src="{{item.img}}" class="crafter-item-image" style="border: 4px solid {{#color currentItemRaw}}{{/color}}" >
            <div class="crafter-item-container-font-recipe">{{#if (eq item.data.data.quantity 1)}}{{else}}{{item.data.data.quantity}}{{/if}}</div>
            
          </td>
          
        <td class="crafter-item-description-frame-frame"><div class="crafter-item-description">

        <b>{{currentItemRaw}}</b>
        {{{baseDesc}}}</div></td>
      </tr>
    </table>
</div>


<div>
  <progress id="file" value="{{item.data.data.price}}" max="100" class="crafter-progress-bar" >  </progress><
</div>
<div class="crafter-progress">{{item.data.data.price}}% complete</div>
<div>
  <h2>Components</h2>
</div>  
<table style="max-width: 999px;" style="align-self: center;"  >
<tr>
    {{#each components}}<form id="craftingmenu" class="crafter-crafting-menu">
     <td>
      <table class="crafter-item-smallcard-frame" style="border: 4px groove {{#color this}}{{/color}}">
      <tr>
        <td style ="width:55px">
          <div class="crafter-item-container-fontframe">
        <img src="{{#complookupimg @this}}{{this}}{{/complookupimg}}" class="crafter-item-smallcard-item"  style="border: 4px solid {{#color this}}{{/color}}" >
        <div class="crafter-item-container-font">{{#compcount @this}}{{/compcount}}/{{#compneededcount @index}}{{/compneededcount}}</div>
        </div>
        </td>
        <td class="crafter-item-smallcard-name" >
          {{this}}
        </td>
      </tr>
    </table>
    </td>
    
    
    
    
    



    {{#if (eq @index 2)}}</tr><tr>{{/if}}
      
  {{/each}}
  {{#if (numberofcomps2 components)}}<td style ="width:180px"> </td>{{/if}}
</tr>
</table>





  <table>
    <thead><h2>Options</h2></thead>
    <tbody>
      <tr>
        <td class="crafter-craftingmenu-parsed-heading-label">
          <Strong>Book Name</Strong>
        </td>
        <td class ="crafter-craftingmenu-parsed-heading"></td>
        <td>
          <select name="bookName" id="changeBook" value="changeBook" aria-placeholder="Bookname">
            <option value="{{currentBook}}" selected="selected" ><b>{{currentBook}}</b></option>
         {{#each books}}
         {{#if (ne this ../currentBook)}}
            <option value= "{{this}}" id={{@index}} name = "{{this}}"> {{this}}</option>
            {{/if}}
           {{/each}}
          </select>
          {{!<input type="text" name = "bookName"  data-dtype="String" placeholder = "Book Name">--}}
        </td>
      </tr>
      
    </tbody>
  </table>
  <div class="crafter-bottom-bar"></div>
  <table>
    <thead><h2>Craft Item </h2></thead>
    <tbody>
      <tr>
        <td><button type="submit" value="craft" name = "Sub" width ="100%">Craft</button></td>
      </tr>
    </tbody>
  </table>
 
</form>


